    <div class="row">
        <div class="col-2">
          <%= link_to user_path(book_comment.user_id) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= book_comment.user.name %>
          <% end %>
        </div>
        <div class="col-8">
          <%= book_comment.comment %>
        </div>
        <% if current_user.id == book_comment.user_id %>
          <div class="col-2">
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger", remote: true %>
          </div>
        <% end %>
    </div>